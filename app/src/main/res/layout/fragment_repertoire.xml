<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_repertoire">

    <TextView
        android:id="@+id/titre_textview_layout_repertoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre_textview_layout_repertoire"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"/>

    <!-- ID Ã  changer en : contacts_recyclerview_layout_repertoire -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rep_recycler_view"
        android:layout_width="331dp"
        android:layout_height="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/supprimer_button_layout_repertoire"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:background="@drawable/bouton_arrondi"
        android:text="@string/supprimer_button_layout_repertoire"
        android:onClick="buttonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.980" />
    <!-- Ajouter : android:onClick=" " -->

    <Button
        android:id="@+id/editer_button_layout_repertoire"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:background="@drawable/bouton_arrondi"
        android:text="@string/editer_button_layout_repertoire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.980"

        />
    <!-- Ajouter : android:onClick=" " -->

    <Button
        android:id="@+id/ajouter_button_layout_repertoire"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:background="@drawable/bouton_arrondi_bleu"
        android:text="@string/ajouter_button_layout_repertoire"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.980" />
    <!-- Ajouter : android:onClick=" " -->
</android.support.constraint.ConstraintLayout>
