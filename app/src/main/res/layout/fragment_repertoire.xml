<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_repertoire"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titre_textview_layout_repertoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre_textview_layout_repertoire"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <!-- ID Ã  changer en : contacts_recyclerview_layout_repertoire -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rep_recycler_view"
        android:layout_width="331dp"
        android:layout_height="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/ajouter_button_layout_repertoire"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/blank"
        android:background="@drawable/ic_addbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:scaleType="fitXY"
        />

</android.support.constraint.ConstraintLayout>
